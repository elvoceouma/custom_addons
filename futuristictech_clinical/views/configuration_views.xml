<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Physician Speciality Views -->
    <record id="view_hospital_physician_speciality_form" model="ir.ui.view">
        <field name="name">hospital.physician.speciality.form</field>
        <field name="model">hospital.physician.speciality</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Speciality Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_hospital_physician_speciality_tree" model="ir.ui.view">
        <field name="name">hospital.physician.speciality.tree</field>
        <field name="model">hospital.physician.speciality</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

