<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Discharge Record Views -->
    <record id="view_hospital_discharge_form" model="ir.ui.view">
        <field name="name">hospital.discharge.form</field>
        <field name="model">hospital.discharge</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="admission_id" domain="[('patient_id', '=', patient_id)]"/>
                            <field name="discharge_date"/>
                            <field name="discharge_type"/>
                        </group>
                        <group>
                            <field name="discharged_by"/>
                            <field name="counsellor_clearance"/>
                            <field name="store_clearance"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Clinical Information" name="clinical_info">
                            <field name="primary_diagnosis" placeholder="Primary diagnosis"/>
                            <field name="secondary_diagnoses" placeholder="Secondary diagnoses"/>
                            <field name="procedures_performed" placeholder="Procedures performed during admission"/>
                            <field name="discharge_medications" placeholder="Medications prescribed at discharge"/>
                        </page>
                        <page string="Follow-up" name="follow_up">
                            <field name="follow_up_instructions" placeholder="Follow-up instructions"/>
                            <field name="discharge_condition"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_hospital_discharge_tree" model="ir.ui.view">
        <field name="name">hospital.discharge.tree</field>
        <field name="model">hospital.discharge</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="admission_id"/>
                <field name="discharge_date"/>
                <field name="discharge_type"/>
                <field name="discharged_by"/>
            </tree>
        </field>
    </record>
    
    <record id="action_hospital_discharge" model="ir.actions.act_window">
        <field name="name">Discharge Records</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.discharge</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Discharge Summary Views -->
    <record id="view_hospital_discharge_summary_form" model="ir.ui.view">
        <field name="name">hospital.discharge.summary.form</field>
        <field name="model">hospital.discharge.summary</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="admission_id" domain="[('patient_id', '=', patient_id)]"/>
                            <field name="discharge_id" domain="[('patient_id', '=', patient_id)]"/>
                        </group>
                        <group>
                            <field name="discharge_date" readonly="1"/>
                            <field name="physician_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Summary" name="summary">
                            <field name="summary" placeholder="Discharge summary"/>
                            <field name="admission_reason" placeholder="Reason for admission"/>
                            <field name="hospital_course" placeholder="Hospital course"/>
                        </page>
                        <page string="Instructions" name="instructions">
                            <field name="discharge_medications" placeholder="Discharge medications"/>
                            <field name="discharge_instructions" placeholder="Discharge instructions"/>
                            <field name="follow_up_plan" placeholder="Follow-up plan"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_hospital_discharge_summary_tree" model="ir.ui.view">
        <field name="name">hospital.discharge.summary.tree</field>
        <field name="model">hospital.discharge.summary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="admission_id"/>
                <field name="discharge_date"/>
                <field name="physician_id"/>
            </tree>
        </field>
    </record>
    
    <record id="action_hospital_discharge_summary" model="ir.actions.act_window">
        <field name="name">Discharge Summaries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.discharge.summary</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>