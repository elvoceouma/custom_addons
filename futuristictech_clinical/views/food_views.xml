<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Food Requisition Views -->
    <record id="view_hospital_food_requisition_form" model="ir.ui.view">
        <field name="name">hospital.food.requisition.form</field>
        <field name="model">hospital.food.requisition</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,delivered,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="admission_id" domain="[('patient_id', '=', patient_id)]"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="meal_type"/>
                        </group>
                    </group>
                    <field name="food_item_ids">
                        <tree>
                            <field name="food_item_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="note"/>
                        </tree>
                    </field>
                    <field name="special_instructions" placeholder="Special instructions for food preparation"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_hospital_food_requisition_tree" model="ir.ui.view">
        <field name="name">hospital.food.requisition.tree</field>
        <field name="model">hospital.food.requisition</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'delivered'" decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="meal_type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="action_hospital_food_requisition" model="ir.actions.act_window">
        <field name="name">Food Requisitions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.food.requisition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Food Item Views -->
    <record id="view_hospital_food_item_form" model="ir.ui.view">
        <field name="name">hospital.food.item.form</field>
        <field name="model">hospital.food.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Food Item Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="calories"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_hospital_food_item_tree" model="ir.ui.view">
        <field name="name">hospital.food.item.tree</field>
        <field name="model">hospital.food.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="calories"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="action_hospital_food_item" model="ir.actions.act_window">
        <field name="name">Food Items</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.food.item</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>