<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Follow-Up Sheet Form View -->
    <record id="view_hospital_follow_up_sheet_form" model="ir.ui.view">
        <field name="name">hospital.follow.up.sheet.form</field>
        <field name="model">hospital.follow.up.sheet</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_get_details" string="Get Details" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="title" string="Follow-Up Sheet"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="ip_number"/>
                            <field name="patient_id"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="company_id"/>
                            <field name="last_updated_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Hygiene Details" name="hygiene_details">
                            <field name="hygiene_detail_ids">
                                <tree editable="bottom">
                                    <field name="parameter"/>
                                    <field name="value"/>
                                    <field name="notes"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="parameter"/>
                                        <field name="value"/>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Formal Activities" name="formal_activities">
                            <field name="formal_activity_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="activity"/>
                                    <field name="comments"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="date"/>
                                        <field name="activity"/>
                                        <field name="comments"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Informal Activities" name="informal_activities">
                            <field name="informal_activity_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="activity"/>
                                    <field name="comments"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="date"/>
                                        <field name="activity"/>
                                        <field name="comments"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Family Session Details" name="family_sessions">
                            <field name="family_session_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="purpose"/>
                                    <field name="matters_discussed"/>
                                    <field name="observation"/>
                                    <field name="outcome"/>
                                    <field name="future_plan"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="date"/>
                                            <field name="purpose"/>
                                            <field name="matters_discussed"/>
                                        </group>
                                        <group>
                                            <field name="observation"/>
                                            <field name="outcome"/>
                                            <field name="future_plan"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Follow-Up Sheet Tree View -->
    <record id="view_hospital_follow_up_sheet_tree" model="ir.ui.view">
        <field name="name">hospital.follow.up.sheet.tree</field>
        <field name="model">hospital.follow.up.sheet</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'confirmed'">
                <field name="ip_number"/>
                <field name="patient_id"/>
                <field name="user_id"/>
                <field name="company_id"/>
                <field name="last_updated_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!-- Follow-Up Sheet Search View -->
    <record id="view_hospital_follow_up_sheet_search" model="ir.ui.view">
        <field name="name">hospital.follow.up.sheet.search</field>
        <field name="model">hospital.follow.up.sheet</field>
        <field name="arch" type="xml">
            <search>
                <field name="ip_number"/>
                <field name="patient_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Patient" name="group_by_patient" context="{'group_by': 'patient_id'}"/>
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Hygiene Detail Form View -->
    <record id="view_hospital_hygiene_detail_form" model="ir.ui.view">
        <field name="name">hospital.hygiene.detail.form</field>
        <field name="model">hospital.hygiene.detail</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="follow_up_sheet_id"/>
                    <field name="parameter"/>
                    <field name="value"/>
                    <field name="notes"/>
                </group>
            </form>
        </field>
    </record>
    
    <!-- Activity Record Form View -->
    <record id="view_hospital_activity_record_form" model="ir.ui.view">
        <field name="name">hospital.activity.record.form</field>
        <field name="model">hospital.activity.record</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="follow_up_sheet_id"/>
                    <field name="date"/>
                    <field name="activity"/>
                    <field name="comments"/>
                    <field name="activity_type"/>
                </group>
            </form>
        </field>
    </record>
    
    <!-- Family Session Form View -->
    <record id="view_hospital_family_session_form" model="ir.ui.view">
        <field name="name">hospital.family.session.form</field>
        <field name="model">hospital.family.session</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="follow_up_sheet_id"/>
                        <field name="date"/>
                        <field name="purpose"/>
                        <field name="matters_discussed"/>
                    </group>
                    <group>
                        <field name="observation"/>
                        <field name="outcome"/>
                        <field name="future_plan"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    
    <!-- Follow-Up Sheet Action -->
    <record id="action_hospital_follow_up_sheet" model="ir.actions.act_window">
        <field name="name">Follow-Up Sheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.follow.up.sheet</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hospital_follow_up_sheet_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first follow-up sheet!
            </p>
        </field>
    </record>
</odoo>     