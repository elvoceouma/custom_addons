<?xml version="1.0"?>
<odoo>
    <!-- OP Visit Form View -->
    <record id="view_op_visit_form" model="ir.ui.view">
        <field name="name">op.visit.form</field>
        <field name="model">op.visit</field>
        <field name="arch" type="xml">
            <form string="OP Visits">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,completed,canceled"/>
                    <button name="action_draft" type="object" string="Confirm" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_confirmed" type="object" string="Complete" 
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            invisible="state in ('completed','canceled')"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_prescriptions" 
                                class="oe_stat_button" icon="fa-medkit"
                                invisible="prescription_count == 0">
                            <field name="prescription_count" widget="statinfo" string="Prescriptions"/>
                        </button>
                        <button type="object" name="action_view_invoices" 
                                class="oe_stat_button" icon="fa-money"
                                invisible="invoice_count == 0">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" placeholder="OP Visit Number"/>
                        </h1>
                    </div>

                    <group>
                        <group name="patient_info" string="Patient Information">
                            <field name="patient_id" readonly="state != 'draft'" 
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="partner_id" readonly="state != 'draft'" 
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="visit_date" readonly="state != 'draft'"/>
                            <field name="free_screening" readonly="state != 'draft'"/>
                        </group>
                        <group name="medical_info" string="Medical Information">
                            <field name="treating_doctor" readonly="state != 'draft'" 
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="treating_doctor_id" readonly="state != 'draft'" 
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="team_role" readonly="state != 'draft'" 
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="consultation_type" readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <group>
                        <group name="followup_info" string="Follow-up Information">
                            <field name="followup_type_id" 
                                   domain="[('type','=','op'),('team_role','=',team_role)]" 
                                   options="{'no_open':True,'no_create':True}"
                                   readonly="state != 'draft'"/>
                        </group>
                        <group name="financial_info" string="Financial Information">
                            <field name="tot_amount" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="message_ids" widget="mail_thread" 
                                   options="{'display_log_button': True}"/>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <!-- OP Visit Tree View -->
    <record id="view_op_visit_tree" model="ir.ui.view">
        <field name="name">op.visit.tree</field>
        <field name="model">op.visit</field>
        <field name="arch" type="xml">
            <tree string="OP Visits" decoration-info="state=='draft'" 
                  decoration-warning="state=='confirmed'" 
                  decoration-success="state=='completed'" 
                  decoration-muted="state=='canceled'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="partner_id"/>
                <field name="visit_date"/>
                <field name="treating_doctor"/>
                <field name="consultation_type"/>
                <field name="followup_type_id"/>
                <field name="tot_amount" sum="Total Amount"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-warning="state == 'confirmed'" 
                       decoration-success="state == 'completed'" 
                       decoration-danger="state == 'canceled'"/>
            </tree>
        </field>
    </record>

    <!-- OP Visit Search View -->
    <record id="view_op_visit_search" model="ir.ui.view">
        <field name="name">op.visit.search</field>
        <field name="model">op.visit</field>
        <field name="arch" type="xml">
            <search string="OP Visits">
                <field name="name" string="Visit Number"/>
                <field name="patient_id" string="Patient"/>
                <field name="treating_doctor" string="Doctor"/>
                <field name="visit_date" string="Visit Date"/>
                
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Completed" name="completed" domain="[('state','=','completed')]"/>
                <filter string="Canceled" name="canceled" domain="[('state','=','canceled')]"/>
                
                <separator/>
                <filter string="Today's Visits" name="today" 
                        domain="[('visit_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), 
                                ('visit_date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('visit_date','&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('visit_date','&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('visit_date','&gt;=', context_today().strftime('%Y-%m-01')),
                                ('visit_date','&lt;=', (context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1))]"/>
                
                <separator/>
                <filter string="Free Screening" name="free_screening" domain="[('free_screening','=',True)]"/>
                <filter string="In Person" name="in_person" domain="[('consultation_type','=','in_person')]"/>
                <filter string="Virtual" name="virtual" domain="[('consultation_type','=','virtual')]"/>
                <filter string="Home Based" name="home_based" domain="[('consultation_type','=','home_based_consultation')]"/>
                
                <group expand="1" string="Group By">
                    <filter string="Patient" name="group_patient" context="{'group_by':'patient_id'}"/>
                    <filter string="Doctor" name="group_doctor" context="{'group_by':'treating_doctor'}"/>
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Consultation Type" name="group_consultation" context="{'group_by':'consultation_type'}"/>
                    <filter string="Visit Date" name="group_date" context="{'group_by':'visit_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- OP Visit Kanban View -->
    <record id="view_op_visit_kanban" model="ir.ui.view">
        <field name="name">op.visit.kanban</field>
        <field name="model">op.visit</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="treating_doctor"/>
                <field name="visit_date"/>
                <field name="state"/>
                <field name="consultation_type"/>
                <field name="tot_amount"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="patient_id"/>
                                    <br/>
                                    <i class="fa fa-user-md"/> <field name="treating_doctor"/>
                                    <br/>
                                    <i class="fa fa-calendar"/> <field name="visit_date" widget="datetime"/>
                                    <br/>
                                    <t t-if="record.consultation_type.raw_value == 'virtual'">
                                        <i class="fa fa-video-camera text-info"/> Virtual
                                    </t>
                                    <t t-elif="record.consultation_type.raw_value == 'home_based_consultation'">
                                        <i class="fa fa-home text-warning"/> Home Based
                                    </t>
                                    <t t-else="">
                                        <i class="fa fa-hospital-o text-primary"/> In Person
                                    </t>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <t t-if="record.tot_amount.raw_value > 0">
                                        <span class="text-success">
                                            <i class="fa fa-money"/> <field name="tot_amount" widget="monetary"/>
                                        </span>
                                    </t>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'confirmed': 'warning', 'completed': 'success', 'canceled': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <!-- Action for OP Visits -->
    <record id="action_op_visit" model="ir.actions.act_window">
        <field name="name">OP Visits</field>
        <field name="res_model">op.visit</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="view_op_visit_tree"/>
        <field name="search_view_id" ref="view_op_visit_search"/>
        <field name="context">{
            'search_default_today': 1,
            'default_visit_date': context_today(),
            'default_consultation_type': 'in_person'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first OP Visit!
            </p>
            <p>
                Track patient visits, manage appointments, and maintain medical records efficiently.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_op_visit" 
              name="OP Visits" 
              parent="menu_patient_management_root" 
              action="action_op_visit" 
              sequence="10"/>
</odoo>