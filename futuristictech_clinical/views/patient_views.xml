<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hospital Patient Views -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Patient Name"/>
                        </h1>
                        <h2>
                            <!-- <field name="reference" readonly="1"/> -->
                        </h2>
                        <h2>
                            <field name="mrn" string="MRN No" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="gender"/>
                            <field name="age"/>
                            <field name="dob"/>
                            <field name="blood_group"/>
                        </group>
                        <group>
                            <field name="mobile"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Illness Tags" name="illness_tags">
                            <field name="illness_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </page>
                        <page string="Admissions" name="admissions">
                            <field name="admission_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="admission_date"/>
                                    <field name="campus_id"/>
                                    <field name="block_id"/>
                                    <field name="room_id"/>
                                    <field name="bed_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="document_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="date"/>
                                    <field name="file_name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Vaccines" name="vaccines">
                            <field name="vaccine_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="vaccine_id"/>
                                    <field name="date"/>
                                    <field name="next_dose_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="OP Visits" name="op_visits">
                            <field name="op_visit_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="physician_id"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="reference"/>
                <field name="mrn"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="mobile"/>
            </tree>
        </field>
    </record>
    
    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="reference"/>
                <field name="mrn"/>
                <field name="mobile"/>
                <field name="email"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>
                    <filter string="Blood Group" name="group_by_blood_group" context="{'group_by': 'blood_group'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hospital_patient_search"/>
    </record>
</odoo>