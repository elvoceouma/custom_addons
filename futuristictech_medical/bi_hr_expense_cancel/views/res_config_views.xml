<odoo>
    <data>
        <record id="res_config_settings_cancel_expense_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.cancel.expense</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='expense_extract_settings']/.." position="after">
                    <div class="row mt16 o_settings_container" id="expenses_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" groups="bi_hr_expense_cancel.group_cancel_expense">
                            <div class="o_setting_left_pane">
                                <!-- If you need a checkbox, add it here -->
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="cancel_expenses" string="Cancel Expense Options"/>
                                <div class="text-muted">
                                    Select Any One of Cancel Expense.
                                </div>
                                <div class="content-group">
                                    <div class="mt-2">
                                        <field name="cancel_expenses" class="o_light_label" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    <record id="base_view_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="logo" position="after">
                <field name="cancel_expenses" readonly="1" force_save="1"/>
            </field>
        </field>
    </record>

    </data>
</odoo>